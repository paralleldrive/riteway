{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireBranch": ["main", "master", "release"]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": {
      "template": "compact"
    }
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["npm test"],
    "after:release": "echo ðŸŽ‰ Successfully released ${name} v${version}"
  }
}
